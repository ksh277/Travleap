{
  "functions": {
    "api/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    },
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}