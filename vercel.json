{
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.2.33"
    },
    "pages/api/**/*.js": {
      "runtime": "@vercel/node@3.2.33"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/expire-points",
      "schedule": "0 15 * * *"
    }
  ]
}
